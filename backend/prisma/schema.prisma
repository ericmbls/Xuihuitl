generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      Role      @default(user)
  createdAt DateTime  @default(now())
  cultivos  Cultivo[]
}

model Cultivo {
  id              Int       @id @default(autoincrement())
  nombre          String
  descripcion     String?   // opcional
  fechaSiembra    DateTime
  ubicacion       String
  frecuenciaRiego Int
  estado          EstadoCultivo @default(activo)
  userId          Int
  createdAt       DateTime  @default(now())
  user            User      @relation(fields: [userId], references: [id])
}

enum Role {
  admin
  user
}

enum EstadoCultivo {
  activo
  inactivo
  cosechado
  perdido
}